<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/benz"
    tools:context="com.example.android.abnd01.MainActivity">


    <TextView
        android:id="@+id/mer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="paris mercedes"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ouverture: Lun au Ven 8H30 - 19H"
        android:textColor="@android:color/white"
        android:layout_below="@+id/mer"
        android:textStyle="italic"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111 Rue de la Gare Paris 1"
        android:textColor="@android:color/white"
        android:layout_below="@+id/mer"
        android:textStyle="italic"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tel: 1212454556"
        android:textColor="@android:color/white"
        android:layout_below="@+id/mer"
        android:textStyle="italic"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="45dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="we build your car"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>


</RelativeLayout>
